{% extends "base.html.twig" %} 

{% block title %} Cat√©gories {% endblock %}

{% block Content %}

<div class="row">
    <div class="col-md-4">
        <div id="slife-table" class="panel panel-default panel-border-color panel-border-color-primary">
            <div class="panel-heading">
                <h3>{{title_form}}</h3>
            </div>
            <div class="panel-body">
                <form method="post"  {{ form_enctype(form)}} action="{{path('categorie_liste')}}">
                    {{ form_start(form) }}
                    {% if categorie.id is defined %}
                        <input type="hidden" name="ref" value="{{categorie.id}}">
                    {% endif %}
                    <div class="row">
                        <div class="col-sm-12">
                            <div class="form-group form-group-default required">
                                {{ form_errors(form.name) }}
                                {{ form_widget(form.name) }}
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <button class="btn btn-complete btn-block button-save" type="submit">
                            <span class="bold">Enregistrer</span>
                        </button>
                    </div>
                    {{ form_end(form) }}
                </form>
            </div>
        </div>
    </div>
    <div class="col-md-8">
        <div class="panel panel-default panel-table">
            <div class="panel-body">
                <table class="table table-striped table-borderless">
                    <thead>
                      <tr>
                        <th style="width:75%;">Nom</th>
                        <th class="actions"></th>
                      </tr>
                    </thead>
                    <tbody class="no-border-x">
                        {% for c in categories %}
                            <tr>
                                <td>{{c.name}}</td>
                                <td class="actions">
                                    <a href="{{path('categorie_liste')}}?ref={{c.id}}" class="icon"><i class="mdi mdi-edit"></i></a>
                                    <a href="{{path('categorie_delete')}}?ref={{c.id}}" class="icon"><i class="fa fa-trash"></i></a>
                                </td>
                            </tr>
                        {% endfor %}
                    </tbody>
                  </table>
                </div>
              </div>
    </div>
</div>

{% endblock %}