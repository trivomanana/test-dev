{% extends "base.html.twig" %} 

{% block title %} Liste des article{% endblock %}

{% block Content %}
<div class="row">
    <ul class="timeline">
        {% for c in categories %}
            <li class="timeline-item">
                <div class="timeline-date"><span>{{c.name}}</span></div>
                <div class="timeline-content">
                    {% for a in c.article %}
                        <div style="margin-bottom:25px!important" class="timeline-header"><span class="timeline-autor">{{a.name}}</span>
                            <span class="timeline-time">
                                <a href="{{path('article_save')}}?ref={{a.id}}" class="icon"><i class="mdi mdi-edit"></i></a>
                                <a href="{{path('article_delete')}}?ref={{a.id}}" class="icon"><i class="fa fa-trash"></i></a>    
                            </span>
                            <div class="timeline-summary">
                                <p>{{a.description}}</p>
                            </div>
                            {% if a.image %}
                            <div class="timeline-gallery">
                                <img src="{{asset('assets/images')}}/{{a.image.name}}" alt="Thumbnail" class="gallery-thumbnail">
                            </div>
                            {% endif %}
                        </div>
                    {% endfor %}
                </div>
            </li>

        {% endfor %}
    </ul>
</div>

{% endblock %}